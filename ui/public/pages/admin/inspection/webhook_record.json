{
  "type": "page",
  "body": [
    {
      "type": "crud",
      "id": "webhookRecordCRUD",
      "name": "webhookRecordCRUD",
      "autoFillHeight": true,
      "autoGenerateFilter": {
        "columnsNum": 4,
        "showBtnToolbar": true
      },
      "headerToolbar": [
        "reload",
        {
          "type": "columns-toggler",
          "align": "right"
        }
      ],
      "loadDataOnce": false,
      "syncLocation": false,
      "initFetch": true,
      "perPage": 20,
      "footerToolbar": [
        {
          "type": "pagination",
          "align": "right"
        },
        {
          "type": "statistics",
          "align": "right"
        },
        {
          "type": "switch-per-page",
          "align": "right"
        }
      ],
      "api": "get:/admin/inspection/webhook/records",
      "columns": [
        {
          "type": "operation",
          "label": "操作",
          "width": 100,
          "buttons": [
            {
              "type": "button",
              "icon": "fas fa-eye text-info",
              "actionType": "drawer",
              "tooltip": "查看详情",
              "drawer": {
                "closeOnEsc": true,
                "closeOnOutside": true,
                "size": "lg",
                "title": "Webhook记录详情 (ESC 关闭)",
                "body": {
                  "type": "form",
                  "mode": "horizontal",
                  "wrapWithPanel": false,
                  "disabled": true,
                  "body": [
                    {
                      "type": "static",
                      "name": "webhook_name",
                      "label": "Webhook名称"
                    },
                    {
                      "type": "static",
                      "name": "url",
                      "label": "目标URL"
                    },
                    {
                      "type": "static",
                      "name": "method",
                      "label": "请求方法"
                    },
                    {
                      "type": "static",
                      "name": "status_code",
                      "label": "HTTP状态码"
                    },
                    {
                      "type": "static",
                      "name": "duration",
                      "label": "响应时间",
                      "tpl": "<% if (data.duration) { %><%- (data.duration / 1000000).toFixed(2) %>ms<% } else { %>-<% } %>"
                    },
                    {
                      "type": "static",
                      "name": "success",
                      "label": "执行状态",
                      "tpl": "${success ? '<span class=\"label label-success\">成功</span>' : '<span class=\"label label-danger\">失败</span>'}"
                    },
                    {
                      "type": "control",
                      "name": "detail",
                      "label": "详情",
                      "body": {
                        "type": "json"
                      }
                    },
                    {
                      "type": "static",
                      "name": "request_time",
                      "label": "请求时间",
                      "tpl": "<% if (data.request_time) { %><%- new Date(data.request_time).toLocaleString() %><% } else { %>-<% } %>"
                    }
                  ]
                }
              }
            }
          ]
        },
        {
          "name": "webhook_name",
          "label": "Webhook名称",
          "type": "text",
          "width": "120px",
          "searchable": true
        },
        {
          "name": "success",
          "label": "执行状态",
          "type": "mapping",
          "width": "80px",
          "map": {
            "true": "<span class='label label-success'>成功</span>",
            "false": "<span class='label label-danger'>失败</span>",
            "*": "<span class='label label-default'>未知</span>"
          },
          "searchable": {
            "type": "select",
            "options": [
              {
                "label": "成功",
                "value": "true"
              },
              {
                "label": "失败",
                "value": "false"
              }
            ]
          }
        },
        {
          "name": "status_code",
          "label": "HTTP状态",
          "type": "text",
          "width": "80px",
          "tpl": "${status_code|default:'-'}"
        },
        {
          "name": "duration",
          "label": "响应时间（ms）",
          "type": "text",
          "width": "90px",
          "tpl": "<% if (data.duration) { %><%- (data.duration / 1000000).toFixed(2) %><% } else { %>-<% } %>"
        },
        {
          "name": "method",
          "label": "请求方法",
          "type": "text",
          "width": "80px"
        },
        {
          "name": "url",
          "label": "目标URL",
          "type": "text",
          "width": "200px",
          "copyable": true,
          "tpl": "${url|truncate:50}"
        },
        {
          "name": "created_at",
          "label": "执行时间",
          "type": "datetime",
          "width": "150px",
          "format": "YYYY-MM-DD HH:mm:ss",
          "sortable": true,
          "searchable": {
            "type": "input-datetime-range"
          }
        }
      ],
      "defaultParams": {
        "orderBy": "created_at",
        "orderDir": "desc"
      }
    }
  ]
}
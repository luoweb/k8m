                            "type": "crud",
                            "api": "get:/admin/cluster_permissions/cluster/${cluster_id_base64}/role/cluster_admin/user/list",
                            "autoFillHeight": true,
                            "autoGenerateFilter": {
                              "columnsNum": 4,

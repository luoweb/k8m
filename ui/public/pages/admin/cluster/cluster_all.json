                        "value": "us-gov-west-1"
                      },
                      {
                        "label": "加拿大（中部，蒙特利尔） - ca-central-1",
                        "value": "ca-central-1"
                      },
                      {
                        "label": "加拿大（西部，卡尔加里） - ca-west-1",
                        "value": "ca-west-1"
                      },
                      {
                        "label": "墨西哥（中部，克雷塔罗） - mx-central-1",
                        "value": "mx-central-1"
                      },
                      {
                        "label": "南美洲（圣保罗，巴西） - sa-east-1",
                        "value": "sa-east-1"
                      },
                      {
                        "label": "欧洲（爱尔兰） - eu-west-1",
                        "value": "eu-west-1"
                      },
                      {
                        "label": "欧洲（伦敦，英国） - eu-west-2",
                        "value": "eu-west-2"
                      },
                      {
                        "label": "欧洲（巴黎，法国） - eu-west-3",
                        "value": "eu-west-3"

      "autoGenerateFilter": {
        "columnsNum": 4,
        "showBtnToolbar": false
      },
      "headerToolbar": [
        {
          "type": "button",
          "label": "重新扫描",
          "level": "primary",
          "actionType": "ajax",
          "api": "post:/admin/cluster/scan"
        },
        {
          "type": "button",
          "label": "纳管集群",
          "level": "primary",
          "actionType": "drawer",
